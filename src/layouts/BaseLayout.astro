---
import "@fontsource/righteous";
import "@fontsource/inter";
import "../styles/global.css";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

export interface Props {
  title?: string;
  description?: string;
  postMeta?: {
    pubDate: Date;
    tags: string[];
  };
}

const { title, description, postMeta } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="dark">
  <head>
    <BaseHead title={title} description={description} postMeta={postMeta} />
  </head>
  <body
    class="container mx-auto max-w-xs sm:max-w-lg lg:max-w-4xl md:max-w-2xl flex flex-col justify-between h-screen dark:bg-slate-900 dark:text-slate-400"
  >
    <Header />
    <main class="flex-grow py-10">
      <slot />
    </main>
    <Footer />
  </body>
</html>
